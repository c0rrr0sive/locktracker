{
  "manifest_version": 3,
  "name": "LockTracker",
  "version": "1.0.0",
  "description": "Sync your sports bets from FanDuel, DraftKings, and PrizePicks automatically",

  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "notifications"
  ],

  "host_permissions": [
    "https://sportsbook.fanduel.com/*",
    "https://sportsbook.draftkings.com/*",
    "https://app.prizepicks.com/*",
    "https://www.prizepicks.com/*",
    "https://web-production-efd3.up.railway.app/*",
    "http://127.0.0.1:5000/*",
    "file:///*"
  ],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "content_scripts": [
    {
      "matches": ["https://sportsbook.fanduel.com/*", "file:///*fanduel*"],
      "js": ["content-fanduel.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://sportsbook.draftkings.com/*", "file:///*draftkings*"],
      "js": ["content-draftkings.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://app.prizepicks.com/*", "https://www.prizepicks.com/*", "file:///*prizepicks*"],
      "js": ["content-prizepicks.js"],
      "run_at": "document_idle"
    }
  ],

  "background": {
    "service_worker": "background.js"
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
